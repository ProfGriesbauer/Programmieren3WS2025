<Window x:Class="OOPGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPGames"
        mc:Ignorable="d"
        Title="OOP Games" ResizeMode="CanResizeWithGrip" MinWidth="400" MinHeight="300" 
        Closed="Window_Closed" KeyDown="Window_KeyDown" 
        FocusManager.FocusedElement="{Binding ElementName=PaintCanvas}"
        Focusable="True">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5,10,5"/>
        </Style>
    </Window.Resources>
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Canvas x:Name="PaintCanvas" Grid.Row="0" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    Margin="5,5,5,5" MouseDown="PaintCanvas_MouseDown" MouseWheel="PaintCanvas_MouseWheel" PreviewMouseRightButtonDown="PaintCanvas_PreviewMouseRightButtonDown"
                    Focusable="True"
                    KeyboardNavigation.TabNavigation="None"/>
            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="StartGame" Grid.Column="0" Content="Start New Game" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" Click="StartGame_Click"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5">
                    <TextBox x:Name="Status" Width="250" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="18"/>
                    <CheckBox x:Name="AutoRestartCheck" Content="Auto-Restart (3s)" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Painter:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5"/>
            <ListBox x:Name="PaintList" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <TextBlock Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Grid.Row="2" Content="Player 1:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5"/>
            <ListBox x:Name="Player1List" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <TextBlock Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Grid.Row="4" Content="Player 2:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5"/>
            <ListBox x:Name="Player2List" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <TextBlock Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Grid.Row="6" Content="Rules:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5"/>
            <ListBox x:Name="RulesList" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <TextBlock Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
