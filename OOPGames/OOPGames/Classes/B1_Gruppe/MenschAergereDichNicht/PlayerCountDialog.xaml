<Window x:Class="OOPGames.B1_Gruppe.MenschAergereDichNicht.PlayerCountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spielkonfiguration" 
        Height="400" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Titel -->
        <TextBlock Grid.Row="0" 
                   Text="Spielkonfiguration" 
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <!-- Spieleranzahl -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Wie viele Spieler?" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="Radio2Players" 
                             Content="2 Spieler" 
                             GroupName="PlayerCount"
                             Margin="10,0"
                             FontSize="12"
                             Checked="PlayerCountChanged"/>
                <RadioButton x:Name="Radio3Players" 
                             Content="3 Spieler" 
                             GroupName="PlayerCount"
                             Margin="10,0"
                             FontSize="12"
                             Checked="PlayerCountChanged"/>
                <RadioButton x:Name="Radio4Players" 
                             Content="4 Spieler" 
                             GroupName="PlayerCount"
                             IsChecked="True"
                             Margin="10,0"
                             FontSize="12"
                             Checked="PlayerCountChanged"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Spielmodus -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Spielmodus:" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <CheckBox x:Name="AdvancedModeCheckBox" 
                      Content="Advanced Modus (mit Sonderregeln)" 
                      FontSize="12"
                      Margin="10,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Spieler-Typen -->
        <StackPanel Grid.Row="3" x:Name="PlayerTypesPanel" Visibility="Collapsed">
            <TextBlock Text="Spieler-Typen:" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Spieler 1 (Rot):" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton x:Name="Player1Human" Content="Mensch" GroupName="Player1" IsChecked="True" Margin="5,0"/>
                    <RadioButton x:Name="Player1Computer" Content="Computer" GroupName="Player1" Margin="5,0"/>
                </StackPanel>
            </Grid>
            
            <Grid Margin="0,5" x:Name="Player2Panel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Spieler 2 (Schwarz):" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton x:Name="Player2Human" Content="Mensch" GroupName="Player2" IsChecked="True" Margin="5,0"/>
                    <RadioButton x:Name="Player2Computer" Content="Computer" GroupName="Player2" Margin="5,0"/>
                </StackPanel>
            </Grid>
            
            <Grid Margin="0,5" x:Name="Player3Panel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Spieler 3 (Gelb):" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton x:Name="Player3Human" Content="Mensch" GroupName="Player3" IsChecked="True" Margin="5,0"/>
                    <RadioButton x:Name="Player3Computer" Content="Computer" GroupName="Player3" Margin="5,0"/>
                </StackPanel>
            </Grid>
            
            <Grid Margin="0,5" x:Name="Player4Panel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Spieler 4 (GrÃ¼n):" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton x:Name="Player4Human" Content="Mensch" GroupName="Player4" IsChecked="True" Margin="5,0"/>
                    <RadioButton x:Name="Player4Computer" Content="Computer" GroupName="Player4" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Start Button -->
        <Button Grid.Row="4" 
                Content="Spiel starten" 
                Width="120" 
                Height="35" 
                FontSize="14"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Click="StartGame_Click"/>
    </Grid>
</Window>
